{
	"id": "nodebb-plugin-emailer-mandrill",
	"name": "Emailer (Mandrill)",
	"description": "Mandrill Emailer for NodeBB",
	"url": "https://github.com/akhoury/nodebb-plugin-emailer-mandrill",
	"library": "./index.js",
    "templates": "templates",
    "hooks": [
		{ "hook": "action:email.send", "method": "send"},
